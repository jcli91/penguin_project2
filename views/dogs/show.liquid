{% layout "layout.liquid" %}
{% block content %}

<article>

    <img src="{{dog.img}}.png">
    {{dog.name}}
    <h2>
        <ul>
            <li>
                
                {{dog.age}}
                {{dog.breed}}
                {{dog.gender}}
            </li>
        </ul>
        {{dog.hobbies}}

    </h2>
    <a href="/dogs/{{dog._id}}/edit"><button>EDIT</button></a>
    <form action="/dogs/{{ dog._id }}?_method=DELETE" method="post">
        <input type="submit" value="DELETE">
    </form>
    <a href="/dogs"><button>Home</button></a>
</article>


{% endblock %}