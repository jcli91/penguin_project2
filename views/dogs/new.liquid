{% layout "layout.liquid" %}
{% block content %}

<div>
    <form action="/dogs" method="post">
        <fieldset>
            <ul>
            <legend>PET DETAILS</legend>
            <label>
                <h4>Name</h4><input type="text" name="name" placeholder="enter pet's name" />
            </label>
            <label>
                <h4>Age</h4> <input type="text" name="age" placeholder="enter pet's age" />
            </label>
            <label>
                <h4>Breed</h4> <input type="text" name="breed" placeholder="pet breed"/>
            </label>
            <label>
                <h4>Gender</h4> <input type="text" name="gender" placeholder="male or female"/>
            </label>
            <label>
                <h4>Likes</h4> <input type="text" name="hobbies" placeholder="details"/>
            </label>
            <label>
                <h4>ProfileURL</h4> <input type="text" name="img" placeholder="enter pet image URL"/>
            </label>
            <label>
                <h4>SlideshowURL</h4> <input type="text" name="slideshow1" placeholder="enter pet image URL"/><br>
               <input type="text" name="slideshow2" placeholder="enter pet image URL"/><br>
                <input type="text" name="slideshow3" placeholder="enter pet image URL"/>

            </label>

            </ul>
        </fieldset>
        <input type="submit" value="ADD" class="add"/>
    </form>
    
    
</div>
<div>
    <a href="/dogs"><button>HOME</button></a>

</div>



{% endblock %}