{% layout "layout.liquid" %}
{% block content %}

<div>
    <form action="/dogs" method="post">
        <fieldset>
            <legend>Add Pet</legend>
            <label>
                Name: <input type="text" name="name" placeholder="enter pet's name" />
            </label>
            <label>
                Age: <input type="number" name="age" placeholder="enter pet's age" />
            </label>
            <label>
                Breed: <input type="text" name="breed" placeholder="pet breed"/>
            </label>
            <label>
                Gender: <input type="text" name="gender" placeholder="Male or Female"/>
            </label>
            <label>
                Likes: <input type="text" name="hobbies" placeholder="Details"/>
            </label>
            <label>
                ImageURL: <input type="text" name="img" placeholder="Enter Pet Image URL"/>
            </label>
        </fieldset>
        <input type="submit" value="Add Pet"/>
    </form>


</div>



{% endblock %}